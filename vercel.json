{
  "version": 2,
  "builds": [
    {
      "src": "Client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { 
      "source": "/api/(.*)", 
      "destination": "/api/server.js" 
    },
    { 
      "source": "/((?!api).*)", 
      "destination": "/Client/index.html" 
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

